#!/usr/bin/make -f

# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1

# Hardening flags
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib/$(DEB_HOST_MULTIARCH) \
		-DBUILD_SHARED_LIBS=ON \
		-DBUILD_EXAMPLES=OFF

override_dh_auto_test:
	dh_auto_test || echo "Tests failed but continuing"

override_dh_missing:
	dh_missing --fail-missing

override_dh_installdocs:
	dh_installdocs
	# Install validation suite to doc directory
	mkdir -p debian/libadic-doc/usr/share/doc/libadic/
	cp -r docs/validation debian/libadic-doc/usr/share/doc/libadic/
	cp DESIGN.md debian/libadic-doc/usr/share/doc/libadic/

override_dh_installexamples:
	dh_installexamples
	mkdir -p debian/libadic-doc/usr/share/doc/libadic/examples
	cp examples/*.cpp debian/libadic-doc/usr/share/doc/libadic/examples/